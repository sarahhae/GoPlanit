<h2> <%= @trip.title %></h2>

<%= image_tag @trip.image, :class => 'feature', :alt => @trip.title if @trip.image.present? %>

<ul>
  <li>Start Date: <%= @trip.start_date %></li>
  <li>End Date: <%= @trip.end_date %></li>
</ul>

<div class="controls">
  <%= link_to "Edit trip", edit_trip_path(@trip) %>
  <%= link_to "Remove trip", @trip, :method => :delete, :data => { :confirm => 'You are about to delete this trip. Would you like to proceed?' } %>
</div>
