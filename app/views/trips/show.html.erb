<div class="sidebar-radius">
  <h1 class="goplanit-white">Goplanit</h1>
  <div class="profile-container">
    <% if @current_user.present? %>
    <%= cl_image_tag(@current_user.profile_image, :class => "profile-picture") %>
    <p class="profile-bold">@<%= @current_user.username %></p>
    <p class="profile">Name: <%= @current_user.name %></p>
    <p class="profile">Date of Birth: <%= @current_user.dob %></p>
    <p class="profile">Email: <%= @current_user.email %></p>
    <% end %>
  </div>
</div>

<main class="main-trip-container">
<h2> <%= @trip.title %></h2>

<%= image_tag @trip.image, :class => 'feature', :alt => @trip.title if @trip.image.present? %>

<ul>
  <li>Start Date: <%= @trip.start_date %></li>
  <li>End Date: <%= @trip.end_date %></li>
</ul>

<div>
<% @trip.items.each do |item| %>
<p><%= item.details %></p>
<%= link_to "Edit item", edit_item_path(item) %>
<% end %>
</div>

<div class="controls">
  <%= link_to "Edit trip", edit_trip_path(@trip) %>
  <%= link_to "Remove trip", @trip, :method => :delete, :data => { :confirm => 'You are about to delete this trip. Would you like to proceed?' } %>
</div>
</main>
