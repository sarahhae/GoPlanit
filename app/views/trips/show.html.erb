<h2> <%= @trip.title %></h2>

<%= image_tag @trip.image, :class => 'feature', :alt => @trip.title if @trip.image.present? %>

<ul>
  <% if @trip.items.any? %>
  <% @items.each do |item| %>
  <li>Flight: <%= link_to item.flight, trip_path(item.id) %></li>
  <li>Accomodation: <%= link_to item.accomodation, trip_path(item.id) %></li>
  <li>Activities: <%= link_to item.activity, trip_path(item.id) %></li>
  <li>Transportation: <%= link_to item.transport, trip_path(item.id) %></li>
  <li>Insurance: <%= link_to item.insurance, trip_path(item.id) %></li>
  <li>Miscellaneous: <%= link_to item.misc, trip_path(item.id) %></li>
  <% end %>
  <% end %>
  <li>Start Date: <%= @trip.start_date %></li>
  <li>End Date: <%= @trip.end_date %></li>
</ul>

<div class="controls">
  <%= link_to "Edit trip", edit_trip_path(@trip) %>
  <%= link_to "Remove trip", @trip, :method => :delete, :data => { :confirm => 'You are about to delete this trip. Would you like to proceed?' } %>
</div>
